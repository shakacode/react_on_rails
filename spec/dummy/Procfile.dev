# Procfile for development with hot reloading of JavaScript and CSS

rails: HMR=true rails s

# Run the hot reload server for client development
webpack-dev-server: bin/webpack-dev-server

# Keep the JS fresh for server rendering. Remove if not server rendering
rails-server-assets: HMR=true bin/webpack --watch

# Start Node server for server rendering.
node-renderer: yarn run node-renderer
