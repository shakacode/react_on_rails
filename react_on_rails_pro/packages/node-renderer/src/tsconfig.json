{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    // This copies JS files to the output directory. Make false once all code is converted.
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "../dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.js"]
}
