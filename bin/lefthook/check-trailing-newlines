#!/usr/bin/env bash
# Check for trailing newlines on all changed files
set -euo pipefail

CONTEXT="${1:-staged}"
files="$(bin/lefthook/get-changed-files "$CONTEXT" '.*')"

if [ -z "$files" ]; then
  echo "âœ… No files to check for trailing newlines"
  exit 0
fi

echo "ðŸ” Checking trailing newlines on $CONTEXT files..."

failed_files=""
for file in $files; do
  if [ -f "$file" ] && [ -s "$file" ]; then
    if ! tail -c 1 "$file" | grep -q '^$'; then
      echo "âŒ Missing trailing newline: $file"
      failed_files="$failed_files $file"
    fi
  fi
done

if [ -n "$failed_files" ]; then
  echo ""
  echo "âŒ Trailing newline check failed!"
  echo "ðŸ’¡ Add trailing newlines to:$failed_files"
  echo "ðŸ”§ Quick fix: for file in$failed_files; do echo >> \"\$file\"; done"
  echo "ðŸš« Skip hook: git commit --no-verify"
  exit 1
fi

echo "âœ… All files have proper trailing newlines"
