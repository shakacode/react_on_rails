{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "node_package/lib",
    "strict": true,
    "incremental": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types", "./node_package/types"]
  },
  "include": [
    "node_package/src/**/*",
    "node_package/types/**/*"
  ]
}
