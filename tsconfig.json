{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": false,
    // needed for Jest tests even though we don't use .tsx
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "node_package/lib",
    "strict": true,
    "incremental": true,
    "target": "es2015"
  },
  "include": ["node_package/src/**/*"]
}
