{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": false,
    "declaration": true,
    "declarationMap": true,
    // needed for Jest tests even though we don't use .tsx
    "jsx": "react-jsx",
    "lib": ["dom", "es2020"],
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "sourceMap": true,
    "incremental": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types"]
  }
}
