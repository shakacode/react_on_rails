{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": false,
    // needed for Jest tests even though we don't use .tsx
    "jsx": "react-jsx",
    "lib": ["dom", "es2020"],
    "module": "node16",
    "noImplicitAny": true,
    "outDir": "node_package/lib",
    "strict": true,
    "incremental": true,
    "target": "es2020"
  },
  "include": ["node_package/src/**/*"],
  "exclude": ["node_package/src/RSCWebpackLoader.js"]
}
