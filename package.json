{
  "name": "@shakacode-tools/react-on-rails-pro-node-renderer",
  "version": "2.0.0-beta.1",
  "protocolVersion": "1.0.0",
  "description": "react-on-rails-pro JavaScript for react_on_rails_pro Ruby gem",
  "main": "packages/node-renderer/src/ReactOnRailsProNodeRenderer.js",
  "bin": "./packages/node-renderer/src/default-node-renderer.js",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    }
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "concurrently": "^4.0.1",
    "console.history": "^1.5.0",
    "express": "^4.15.2",
    "express-busboy": "^7.0.1",
    "fs-extra": "^8.0.1",
    "lockfile": "^1.0.4",
    "semver": "^5.5.0",
    "sleep-promise": "^8.0.1",
    "source-map-support": "^0.5.9",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@sentry/node": "^5.17.0",
    "@sentry/tracing": "^5.27.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-shakacode": "^17.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "honeybadger": "^1.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "ndb": "^1.1.5",
    "nps": "^5.9.12",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "release-it": "^14.4.1",
    "supertest": "^4.0.2",
    "tap-diff": "^0.1.1",
    "tap-spec": "^5.0.0",
    "tape-async": "^2.3.0",
    "touch": "^3.1.0",
    "yalc": "^1.0.0-pre.27"
  },
  "peerDependencies": {
    "@sentry/node": "^5.17.0",
    "@sentry/tracing": "^5.27.3",
    "honeybadger": "^1.3.0"
  },
  "files": [
    "packages/node-renderer/src"
  ],
  "scripts": {
    "test": "nps test",
    "prerelease": "nps check",
    "start": "nps",
    "developing": "rm -rf /tmp/react-on-rails-pro-node-renderer-bundles && RENDERER_LOG_LEVEL=info NODE_DEBUG=ROR node -r source-map-support/register packages/node-renderer/src/default-node-renderer.js",
    "eslint": "eslint .",
    "check": "nps lint && nps format && nps test",
    "local": "echo 'Be sure to run yarn run dummy:install' && yarn run build && cd spec/dummy && foreman start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakacode-tools/react_on_rails_pro.git"
  },
  "keywords": [
    "react",
    "webpack",
    "JavaScript",
    "Ruby",
    "on",
    "Rails"
  ],
  "author": "justin@shakacode.com",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/shakacode/react_on_rails_pro/issues"
  },
  "homepage": "https://github.com/shakacode/react_on_rails_pro#readme",
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "packages/node-renderer/tests/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "resetModules": true,
    "resetMocks": true,
    "setupFiles": [
      "./packages/node-renderer/tests/helper.js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "./packages/vm-renderer/src"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yalc check"
    }
  }
}
