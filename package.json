{
  "name": "react-on-rails-workspace",
  "version": "16.2.0-beta.12",
  "description": "react-on-rails monorepo workspace manager",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/react-on-rails",
    "packages/react-on-rails-pro",
    "packages/react-on-rails-pro-node-renderer"
  ],
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.15.0",
    "@tsconfig/node14": "^14.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.16",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/turbolinks": "^5.2.2",
    "create-react-class": "^15.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^16.0.0",
    "jsdom": "^22.1.0",
    "nps": "^5.9.3",
    "prettier": "^3.5.2",
    "prop-types": "^15.8.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-on-rails-rsc": "19.0.2",
    "redux": "^4.2.1",
    "stylelint": "^16.14.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "test": "yarn workspaces run test",
    "clean": "yarn workspaces run clean",
    "start": "yarn run nps",
    "build": "yarn workspace react-on-rails run build && yarn workspace react-on-rails-pro run build && yarn workspace react-on-rails-pro-node-renderer run build",
    "build-watch": "yarn workspaces run build-watch",
    "lint": "yarn run nps eslint",
    "lint:scss": "stylelint \"react_on_rails/spec/dummy/app/assets/stylesheets/**/*.scss\" \"react_on_rails/spec/dummy/client/**/*.scss\"",
    "check": "yarn run lint && yarn workspaces run check",
    "type-check": "yarn workspaces run type-check",
    "yalc:publish": "yarn workspaces run yalc:publish",
    "yalc": "yarn workspaces run yalc",
    "publish": "yarn workspaces run publish",
    "postinstall": "test -f .lefthook.yml && test -d .git && command -v bundle >/dev/null 2>&1 && bundle exec lefthook install || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakacode/react_on_rails.git"
  },
  "keywords": [
    "react",
    "webpack",
    "JavaScript",
    "Ruby",
    "on",
    "Rails"
  ],
  "author": "justin@shakacode.com",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/shakacode/react_on_rails/issues"
  },
  "homepage": "https://github.com/shakacode/react_on_rails#readme",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
