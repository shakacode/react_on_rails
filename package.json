{
  "name": "react-on-rails-pro-vm-renderer",
  "version": "1.2.1",
  "protocolVersion": "1.0.0",
  "description": "react-on-rails-pro JavaScript for react_on_rails_pro Ruby gem",
  "main": "packages/vm-renderer/lib/ReactOnRailsProVmRenderer.js",
  "bin": {
    "vm-renderer": "./packages/vm-renderer/lib/default-vm-renderer.js"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.13",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "babelify": "^7.3.0",
    "console.history": "^1.5.0",
    "express": "^4.15.2",
    "express-busboy": "^6.0.1",
    "fs-extra": "^3.0.1",
    "lockfile": "^1.0.4",
    "semver": "^5.5.0",
    "source-map-support": "^0.5.9",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-flow-react-proptypes": "7.0.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-react-hmre": "^1.1.1",
    "eslint": "^4.9.0",
    "eslint-config-shakacode": "^16.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.43.1",
    "jest": "^23.5.0",
    "jsdom": "^9.12.0",
    "release-it": "^2.7.1",
    "sleep-promise": "^8.0.1",
    "supertest": "^3.0.0",
    "tap-diff": "^0.1.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "tape-async": "^2.3.0",
    "touch": "^3.1.0"
  },
  "files": [
    "packages/vm-renderer/lib"
  ],
  "scripts": {
    "test": "jest packages/vm-renderer/tests/**/*.test.js",
    "clean": "rm -rf packages/vm-renderer/lib",
    "babel": "babel --out-dir packages/vm-renderer/lib packages/vm-renderer/src",
    "build": "yarn run clean && yarn run babel",
    "build:dev": "yarn run clean && yarn run babel -w --source-maps",
    "postinstall": "yarn run build",
    "prepublish": "yarn run build",
    "prerelease": "yarn run check && yarn run clean && yarn run build",
    "start": "echo 'Starting React on Rails Pro VM Renderer using the default configuration.' && node --experimental-modules packages/vm-renderer/lib/default-vm-renderer.js",
    "developing": "rm -rf /tmp/react-on-rails-pro-vm-renderer-bundles && RENDERER_LOG_LEVEL=info NODE_DEBUG=ROR node  -r source-map-support/register --experimental-modules packages/vm-renderer/lib/default-vm-renderer.js",
    "eslint": "eslint .",
    "flow": "flow check packages/vm-renderer",
    "lint": "yarn run eslint",
    "check": "yarn run lint && yarn run flow && yarn run test",
    "local": "echo 'Be sure to run yarn run dummy:install' && yarn run build && cd spec/dummy && foreman start",
    "link": "yarn link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakacode/react_on_rails_pro.git"
  },
  "keywords": [
    "react",
    "webpack",
    "JavaScript",
    "Ruby",
    "on",
    "Rails"
  ],
  "author": "justin@shakacode.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shakacode/react_on_rails_pro/issues"
  },
  "homepage": "https://github.com/shakacode/react_on_rails_pro#readme",
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "packages/vm-renderer/tests/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "resetModules": true,
    "resetMocks": true,

    "setupFiles": [
      "./packages/vm-renderer/tests/helper.js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
